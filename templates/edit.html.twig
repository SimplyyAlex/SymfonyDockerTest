{% extends 'base.html.twig' %}

{% block body %}
    <div class="w-screen h-screen flex items-center justify-center bg-gray-200">
        <div class="w-full max-w-sm bg-gray-800 rounded-2xl p-6 shadow-xl">
            <form method="POST" action="{{ path('edit') }}" class="flex flex-col gap-4">
                <label for="id" class="text-sm font-medium text-gray-300">ID:</label>
                <input
                    id="id"
                    name="id"
                    type="text"
                    class="w-full h-11 px-4 text-gray-900 rounded-lg bg-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
                    {% if id is not null %}
                        value="{{ id }}"
                    {% endif %}
                    required
                >
                <label for="name" class="text-sm font-medium text-gray-300">Name:</label>
                <input
                    id="name"
                    name="name"
                    type="text"
                    class="w-full h-11 px-4 text-gray-900 rounded-lg bg-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
                    required
                >
                <label for="surname" class="text-sm font-medium text-gray-300">Surname:</label>
                <input
                    id="surname"
                    name="surname"
                    type="text"
                    class="w-full h-11 px-4 text-gray-900 rounded-lg bg-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
                    required
                >
                <button
                    type="submit"
                    class="w-full h-11 mt-2 bg-yellow-500 hover:bg-yellow-600 text-white font-semibold rounded-lg transition"
                >
                    Save
                </button>
            </form>
        </div>
    </div>
{% endblock %}
